<%-include("../partials/header", {title: "Dashboard"})-%>
<body>
    <div class="sidebar" data-theme="light">
        <%-include("../partials/sidebar")-%>
    </div>
    <div class="content-home" data-theme="light">
      <%if (message){%>
        <%-include("../partials/success", {message: message})-%>
      <%}%>
        <table class="styled-table table">
            <thead>
              <tr>
                <th>#</th>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <%let counter = 0; data.forEach((item)=>{if(item.role == "admin"){counter+=1}})%>
              <%let no = 1;data.forEach((item)=>{%>
                <tr>
                  <td><%-no-%></td>
                  <td><%-item.username-%></td>
                  <td><%-item.email-%></td>
                  <td><%-item.role-%></td>
                  <td>
                    <table class="action">
                      <tr>
                        <td><a href="/admin/users/<%=item._id%>"><i class="fa-solid fa-eye" style="color: #54b5ff;"></i></a></td>
                        <td><a href="/admin/users/update/<%=item._id%>"><i class="fa-solid fa-pen" style="color:yellow"></i></a></td>
                        <%if ((item.role == "admin" && counter > 1) || item.role == "user"){%>
                          <td><a href="/admin/users/delete/<%=item._id%>"><i class="fa-solid fa-trash" style="color:red"></i></a></td>
                        <%}%>
                        </tr>
                    </table>
                  </td>
                </tr>
              <%no+=1})%>
            </tbody>
          </table>
    </div>
<%-include("../partials/footer")-%>
